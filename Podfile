# Uncomment the next line to define a global platform for your project
  platform :ios, '12.0'

target 'BeeGarden' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  
  # Pods for BeeGarden
  pod 'UIGradient'
  
  #Libraries used.
  
  pod 'TinyConstraints' #set View constraints- sets the relstionship b/w page and button
  pod 'lottie-ios' #create the three animations on homepage and the capturing the image
  pod 'Alamofire' #http request for weather.
  pod 'SwiftyJSON' #To access the body of http for weather
  pod 'NVActivityIndicatorView'# ANIMATION FOR CONEECTING To network.
  pod 'Charts' #For the rainfall graph
  pod 'GlidingCollection' # not used
  pod 'FloatingPanel' #not used
  pod 'CalendarHeatmap'  #record water graph
  pod 'SwiftEntryKit', '1.2.3'  # notifications and pop-ups
  pod 'UICircularProgressRing' #watering progress circle.
  pod 'paper-onboarding' #tutorials at the start.
  pod 'CropViewController' #cropping the image.
  
  target 'BeeGardenTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'BeeGardenUITests' do
    # Pods for testing
  end

end
